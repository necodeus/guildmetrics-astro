    <div
      id="users"
      class="grid grid-cols-1 gap-5 md:grid-cols-2 lg:grid-cols-3"
    >
      {
        users.map((user, i) => (
          <UserCard user={user} achievements={achievements} courses={courses} />
        ))
      }
    </div>
  </div>
</Layout>
