---
import lessonIcon from "../assets/lessons.svg";
import gemIcon from "../assets/gems.webp";

const { level, xp, pc, lessons_solved, gems } = Astro.props;
---

<div
  class="flex items-center justify-center text-black dark:text-white text-lg font-medium h-8 gap-1"
>
  <span>{level} poziom</span>
  <span class="text-sm font-normal">&middot; {xp} XP</span>
  <span class="text-sm font-normal">&middot;</span>
  <svg
    height="15"
    width="15"
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    aria-hidden="true"
    data-slot="icon"
    class="text-black dark:text-white"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M16.5 18.75h-9m9 0a3 3 0 0 1 3 3h-15a3 3 0 0 1 3-3m9 0v-3.375c0-.621-.503-1.125-1.125-1.125h-.871M7.5 18.75v-3.375c0-.621.504-1.125 1.125-1.125h.872m5.007 0H9.497m5.007 0a7.454 7.454 0 0 1-.982-3.172M9.497 14.25a7.454 7.454 0 0 0 .981-3.172M5.25 4.236c-.982.143-1.954.317-2.916.52A6.003 6.003 0 0 0 7.73 9.728M5.25 4.236V4.5c0 2.108.966 3.99 2.48 5.228M5.25 4.236V2.721C7.456 2.41 9.71 2.25 12 2.25c2.291 0 4.545.16 6.75.47v1.516M7.73 9.728a6.726 6.726 0 0 0 2.748 1.35m8.272-6.842V4.5c0 2.108-.966 3.99-2.48 5.228m2.48-5.492a46.32 46.32 0 0 1 2.916.52 6.003 6.003 0 0 1-5.395 4.972m0 0a6.726 6.726 0 0 1-2.749 1.35m0 0a6.772 6.772 0 0 1-3.044 0"
    ></path>
  </svg>

  <span class="text-sm font-normal">{lessons_solved}</span>
  <span class="text-sm font-normal">&middot;</span>
  <img src={gemIcon.src} width="20" height="20" alt="Gems" />
  <span class="text-sm font-normal">{gems}</span>
</div>
<div
  class="w-full h-[5px] rounded-[4px] my-[10px] mt-0 bg-[#0000000c] dark:bg-[#ffffff1f]"
>
  <div
    class="h-full rounded-[5px] transition-all duration-2000"
    style={`background-blend-mode: soft-light; border-color: var(--yellow-200); background-image: url(https://www.boot.dev/_nuxt/smalltexturestone.ChOpSlRw.webp), radial-gradient(circle at 100% 100%, rgb(245, 247, 249) 10%, rgb(18, 22, 32) 70%), linear-gradient(0deg, rgb(253, 223, 143) 3.13%, rgb(238, 178, 63) 41.12%, rgb(193, 133, 0) 60.62%, rgb(238, 178, 63) 103.12%); width: ${pc}%;`}
  >
  </div>
</div>
