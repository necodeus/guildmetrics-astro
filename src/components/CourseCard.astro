---
const {
  slug,
  title,
  thumbnailURL,
  shortDescription,
  estimatedCompletionTimeHours,
  genericTitle,
  highlight,
} = Astro.props;

const specialClasses = highlight ? "bg-[#fff38e1c] hover:bg-[##fff38e1c]" : "";
---

<a
  href={`https://www.boot.dev/courses/${slug}`}
  class={`border border-white/10 block no-underline rounded-xl p-5 text-white font-normal text-left flex gap-5 bg-[#0c0c0c] hover:bg-[#0f0f0f] border border-white/10  ${specialClasses}`}
>
  <div>
    <img
      src={thumbnailURL}
      alt={title}
      class="min-w-[80px] min-h-[80px]"
      width="80"
      height="80"
    />
  </div>
  <div class="flex flex-col gap-2">
    <div class="text-[20px] font-medium flex gap-5 items-baseline">
      <div class="flex-grow"
      >{genericTitle}</div>
      <div class="text-[14px] font-[500] whitespace-nowrap text-right">
        ok. {estimatedCompletionTimeHours} godz.
      </div>
    </div>
    <div class="text-[16px]">{shortDescription}</div>
  </div>
</a>
